<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/historyTableRowData"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_grey_line">
    <TextView
        android:id="@+id/historyTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="" />

    <TextView
        android:id="@+id/historyTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="" />

    <TextView
        android:id="@+id/historySympt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="" />

    <TextView
        android:id="@+id/historyDrug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="" />

    <ImageView
        android:id="@+id/historyNote"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_weight="1"
        android:onClick="onClickListener"
        android:background="@color/def"
        android:layout_gravity="bottom"
        app:srcCompat="@drawable/ic_writing"/>

</TableRow>